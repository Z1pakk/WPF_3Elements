<Window x:Class="WpfElements.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfElements"
        mc:Ignorable="d"
        Title="MainWindow" Height="224.875" Width="331.98">
    <StackPanel>
        <ToolBar>
            <Button Click="Button_Click" Content="Check" />
        </ToolBar>
        <TextBlock>This is <Span FontWeight="Bold" Foreground="Red">TextBlock</Span>  <LineBreak /> and it is very happy!</TextBlock>

        <TextBlock TextWrapping="Wrap" Foreground="Green">This is TextBlock and it is very happy!</TextBlock>

        <TextBlock TextWrapping="WrapWithOverflow" Foreground="Green">This is TextBlock and it is very happy!</TextBlock>

        <TextBlock TextTrimming="CharacterEllipsis" Foreground="Blue">This is TextBlock and it is very happy!</TextBlock>

        <TextBox x:Name="txtText" FontSize="20" SpellCheck.IsEnabled="True" Text="awda   awd adaw daw d awd  daw d12 1  12 1212 12 12 2121 " TextWrapping="Wrap" />

        <Label Name="lblText" />
    </StackPanel>
</Window>
